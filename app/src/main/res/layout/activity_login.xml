<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="6dp"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:orientation="vertical"

            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv"
                android:src="@drawable/logoo"
                android:layout_gravity="center"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="250dp" />


            <TextView
                android:id="@+id/tv_home"
                android:text="Sign Up"
                android:visibility="gone"
                android:textSize="@dimen/_17sdp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="User Type"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="sans-serif-black"
                android:gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/spUserType"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/user_types"
                />
            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                card_view:cardCornerRadius="6dp"
                card_view:cardElevation="6dp"
                card_view:cardUseCompatPadding="true">

                <EditText
                    android:id="@+id/et_uname"
                    android:singleLine="true"
                    android:hint="Username"
                    android:drawableLeft="@drawable/ic_un"
                    android:background="#FFFFFF"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                card_view:cardCornerRadius="6dp"
                card_view:cardElevation="6dp"
                card_view:cardUseCompatPadding="true">

                <EditText
                    android:id="@+id/et_pwd"
                    android:singleLine="true"
                    android:drawableLeft="@drawable/ic_pass"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:background="#FFFFFF"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tv_forget_pass"
                android:text="Forgot Password"

                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/bt_signin"
                android:text="Sign in"
                android:padding="@dimen/_11sdp"
                android:textSize="@dimen/_13sdp"
                android:textColor="#000"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/button1_rounded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/bt_signup"
                android:text="Sign Up"
                android:padding="@dimen/_11sdp"
                android:textSize="@dimen/_13sdp"
                android:textColor="#ffffff"
                android:visibility="gone"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/button1_rounded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/bt_signup_fb"
                android:text="SignUp with Facebook"
                android:padding="@dimen/_11sdp"
                android:textSize="@dimen/_13sdp"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_70sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/button_rounded2"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>