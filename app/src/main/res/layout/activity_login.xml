<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:rsb="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#f9ffffff"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

         <!--   <ImageView
                android:layout_marginBottom="50dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:srcCompat="@drawable/home_logo"/>-->


            <TextView
                android:id="@+id/tv_home"
                android:text="Sign Up"
                android:textSize="@dimen/_17sdp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_uname"
                android:hint="Username"
                android:padding="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/edittext_rounded_login"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <EditText
                android:id="@+id/et_pwd"
                android:hint="Password"
                android:padding="@dimen/_9sdp"
                android:background="@drawable/edittext_rounded_login"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_forget_pass"
                android:text="Forgot Password"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/bt_signin"
                android:text="Sign in"
                android:padding="@dimen/_11sdp"
                android:textSize="@dimen/_13sdp"
                android:textColor="#000"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/button_rounded3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/bt_signup"
                android:text="Sign Up"
                android:padding="@dimen/_11sdp"
                android:textSize="@dimen/_13sdp"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/button_rounded1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/bt_signup_fb"
                android:text="SignUp with Facebook"
                android:padding="@dimen/_11sdp"
                android:textSize="@dimen/_13sdp"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_70sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/button_rounded2"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>