<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_team1_score"
        android:padding="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:text="Team1 Score"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/etTeam1Score"
        android:background="@drawable/et_box"
        android:padding="@dimen/_5sdp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_team2_score"
        android:padding="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:text="Team2 Score"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/etTeam2Score"
        android:background="@drawable/et_box"
        android:padding="@dimen/_5sdp"
        android:layout_height="wrap_content"/>
    <TextView
        android:padding="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:text="Result"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/etResult"
        android:background="@drawable/et_box"
        android:padding="@dimen/_5sdp"
        android:layout_height="wrap_content"/>
    <Button
        android:background="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:id="@+id/btnAddResult"
        android:layout_margin="@dimen/_8sdp"
        android:text="Add Result"
        android:layout_height="wrap_content"/>

</LinearLayout>